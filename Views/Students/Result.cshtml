@model Student

@{
    ViewData["Title"] = "Student Result";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .container {
        padding: 20px;
    }

    h1 {
        color: #007bff;
        margin-bottom: 30px;
        text-align: center;
    }

    .result-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

    .table th,
    .table td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table th {
        font-weight: bold;
        color: #555;
    }

    .table tbody tr:hover {
        background-color: #f5f5f5;
    }

    .highlight {
        font-weight: bold;
        color: #dc3545;
    }

    p {
        font-size: 18px;
        text-align: center;
        color: #6c757d;
    }

    /* Responsive Design */
    media (max-width: 768px) {
        .container {
            padding: 10px;
        }

        .result-container {
            padding: 20px;
        }

        .table th,
        .table td {
            padding: 8px 10px;
            font-size: 14px;
        }
    }
</style>

<div class="container">
    <h1 class="text-center">Rozhn Terminal Result</h1>

    @if (Model != null)
    {
        <div class="result-container">
            <table class="table">
                <tr>
                    <th>Serial</th>
                    <td>@Model.Serial</td>
                </tr>
                <tr>
                    <th>Term No</th>
                    <td>@Model.TermNo</td>
                </tr>

                <tr>
                    <th>Teacher</th>
                    <td>@Model.Teacher</td>
                </tr>

                <tr>
                    <th>Student Name</th>
                    <td>@Model.StudentName</td>
                </tr>

                <tr>
                    <th>1st Month</th>
                    <td>@Model.Month1</td>
                </tr>

                <tr>
                    <th>2nd Month</th>
                    <td>@Model.Month2</td>
                </tr>

                <tr>
                    <th>Viva</th>
                    <td>@Model.Viva</td>
                </tr>
                <tr>
                    <th>Attendance/ Book Review</th>
                    <td>@Model.AttendBookReview</td>
                </tr>

                <tr>
                    <th>Assignments</th>
                    <td></td>
                </tr>

                <tr>
                    <th>Written</th>
                    <td>@Model.Written</td>
                </tr>

                <tr>
                    <th>Wordlist</th>
                    <td>@Model.Wordlist</td>
                </tr>

                <tr>
                    <th>Total Marks</th>
                    <td>@Model.Total</td>
                </tr>

                <tr>
                    <th>Obtained</th>
                    <td>@Model.Obtained</td>
                </tr>

                <tr>
                    <th>Percentage</th>
                    <td>
                    <td><span class="highlight">@($"{Model.Percentage:0.00}%")</span></td>
                    </td>
                </tr>
                <tr>
                    <th>Result</th>
                    <td><span class="highlight">@Model.Result</span></td>
                </tr>
                <tr>
                    <th>Grade</th>
                    <td>@Model.Grade</td>
                </tr>
            </table>
        </div>
    }
    else
    {
        <p>No results found.</p>
    }
</div>
