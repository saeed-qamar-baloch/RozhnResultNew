@model List<Result.Models.Student>

@{
    ViewData["Title"] = "Search Results";
}

<style>
    /* General Styles */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        text-align: center;
    }

    h1 {
        color: #007bff;
        margin-bottom: 20px;
        font-size: 28px;
        font-weight: 700;
    }

    /* Student Card Styles */
    .student-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 20px;
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        text-align: left;
    }

    .student-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .student-card h4 {
        color: #28a745;
        margin-bottom: 10px;
        font-size: 22px;
        text-align: center;
    }

    .student-card p {
        margin: 6px 0;
        font-size: 16px;
        line-height: 1.4;
    }

    .student-card strong {
        font-weight: 600;
        color: #555;
    }

    /* Highlighted Text */
    .highlight {
        font-weight: bold;
        color: #dc3545;
    }

    /* No Results Message */
    .no-results {
        font-size: 18px;
        text-align: center;
        color: #6c757d;
        margin-top: 20px;
    }

    /* Responsive Design */
    media (max-width: 768px) {
        .container {
            padding: 10px;
        }

        .student-card {
            padding: 15px;
        }

        .student-card h4 {
            font-size: 20px;
        }

        .student-card p {
            font-size: 14px;
        }
    }
</style>

<div class="container">
    <h1>Rozhn Terminal Result 2025</h1>
    <h1>Search Results</h1>

    @if (Model != null && Model.Count > 0)
    {
        @foreach (var student in Model)
        {
            <div class="student-card">
                <h4>@student.StudentName</h4>
                <p><strong>Father:</strong> @student.Father</p>
                <p><strong>Serial:</strong> @student.Serial</p>
                <p><strong>Term No:</strong> @student.TermNo</p>
                <p><strong>1st Month:</strong> @student.Month1</p>
                <p><strong>2nd Month:</strong> @student.Month2</p>
                <p><strong>Viva:</strong> @student.Viva</p>
                <p><strong>Attendance/ Book Review:</strong> @student.AttendBookReview</p>
                <p><strong>Assignments:</strong> @student.AssignmentFacilitators</p>
                <p><strong>Debate:</strong> @student.Debate</p>
                <p><strong>Performance:</strong> @student.Performance</p>
                <p><strong>Written:</strong> @student.Written</p>
                <p><strong>Wordlist:</strong> @student.Wordlist</p>
                <p><strong>Total Marks:</strong> @student.Total</p>
                <p><strong>Obtained:</strong> @student.Obtained</p>
                <p><strong>Percentage:</strong> <span class="highlight">@student.Percentage</span></p>
                <p><strong>Result:</strong> <span class="highlight">@student.Result</span></p>
                <p><strong>Grade:</strong> @student.Grade</p>
            </div>
        }
    }
    else
    {
        <p class="no-results">No results found.</p>
    }
</div>
